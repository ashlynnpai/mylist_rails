.col-sm-6
  = @user.name


- if @user.railscasts.length == 0
  .col-sm-6
    = link_to 'Create Railscasts Lists', makelist_casts_path, method: :post


%h4 Privacy Settings

- if @user.public_profile == true
  %p Your profile is currently public
  %h5= link_to 'Make Profile Private', make_private_path, method: :patch, class: 'btn btn-success'

- else
  %p Your profile is currently private
